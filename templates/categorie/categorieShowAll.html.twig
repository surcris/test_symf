{% block body %}

<div class="container">
    {% if categories is defined %}
        {% for categorie in categories %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Id : {{categorie.id}}</h5>
                <p class="card-text">Nom : {{categorie.nom}}</p>
